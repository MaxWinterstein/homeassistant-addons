{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "mergeConfidence:all-badges",
    "config:recommended",
    "config:js-app",
    ":disableDigestUpdates",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    "customManagers:dockerfileVersions",
  ],
  rebaseWhen: "conflicted",
  dependencyDashboard: true,
  dependencyDashboardAutoclose: true,
  labels: ["dependencies", "no-stale"],
  commitMessageTopic: "{{depName}}",
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: ["/(^|/)build\\.json$/"],
      matchStrings: [
        '"(?<depName>thomx/fr24feed-piaware):(?<currentValue>[^"]+)"',
      ],
      datasourceTemplate: "docker",
    },
    {
      customType: "regex",
      managerFilePatterns: ["//Dockerfile$/", "//build.yaml$/"],
      matchStringsStrategy: "any",
      matchStrings: [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+",
        "(aarch64|amd64|armhf|armv7|i386):\\s[\"']?(?<depName>.*?):(?<currentValue>.*?)[\"']?\\s",
      ],
      datasourceTemplate: "docker",
    },
  ],
  packageRules: [
    {
      matchFileNames: ["adsb-multi-portal-feeder/**"],
      groupName: "adsb-multi-portal-feeder dependencies",
    },
    {
      matchFileNames: ["fr24-sharing-key-generator/**"],
      groupName: "fr24-sharing-key-generator dependencies",
    },
    {
      matchPackageNames: ["*", "/.*/"],
      matchFileNames: ["*.*", ".gitlab/**"],
      commitMessagePrefix: "",
    },
    {
      matchManagers: ["github-actions"],
      matchUpdateTypes: ["minor", "patch"],
      automerge: true,
    },
  ],
  ignorePaths: ["portainer/*", "awtrix/*", "octoprint-proxy/*"],
  commitMessagePrefix: "[{{packageFileDir}}]",
  gitIgnoredAuthors: ["renovate[bot]", "github-actions"],
  prHeader: '{"prProperties": {"branchName": "{{branchName}}", "depName": "{{depName}}", "newVersion": "{{newValue}}"}}\n',
}
